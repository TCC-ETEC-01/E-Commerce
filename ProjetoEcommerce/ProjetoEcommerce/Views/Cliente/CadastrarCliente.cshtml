@model ProjetoEcommerce.Models.tbPassagem

@{
    ViewData["Title"] = "Cadastrar Passagem";
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["MensagemSucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["MensagemErro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<link rel="stylesheet" href="~/css/ClienteCadastro.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<main>
    <div class="card-form">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-plus-square"></i>
            <div>
                <h2 class="mb-0 fw-bold">Cadastrar Passagem</h2>
                <small>Preencha os dados da nova passagem</small>
            </div>
        </div>

        <form asp-action="CadastrarPassagem" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <section class="form-section">
                <h5><i class="bi bi-ticket-perforated-fill"></i> Dados da Passagem</h5>

                <div class="row g-4">

                    <div class="col-md-6">
                        <label for="IdViagem_IdViagem" class="form-label">
                            <i class="bi bi-calendar-check"></i> ID da Viagem *
                        </label>
                        <input name="IdViagem.IdViagem" value="@Model.IdViagem?.IdViagem" class="form-control" />
                        <span asp-validation-for="IdViagem.IdViagem" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label for="IdTransporte_IdTransporte" class="form-label">
                            <i class="bi bi-truck-front"></i> ID do Transporte *
                        </label>
                        <input name="IdTransporte.IdTransporte" value="@Model?.IdTransporte?.IdTransporte" class="form-control" />
                        <span asp-validation-for="IdTransporte.IdTransporte" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Valor" class="form-label">
                            <i class="bi bi-currency-dollar"></i> Valor *
                        </label>
                        <input asp-for="Valor" class="form-control" placeholder="Ex: 100.00" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Assento" class="form-label">
                            <i class="bi bi-person-seat"></i> Assento *
                        </label>
                        <input asp-for="Assento" class="form-control" placeholder="Número do assento" />
                        <span asp-validation-for="Assento" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Situacao" class="form-label">
                            <i class="bi bi-info-circle"></i> Situação *
                        </label>
                        <input asp-for="Situacao" class="form-control" placeholder="Ex: Confirmada, Pendente" />
                        <span asp-validation-for="Situacao" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Translado" class="form-label">
                            <i class="bi bi-arrow-repeat"></i> Translado *
                        </label>
                        <select asp-for="Translado" class="form-select">
                            <option value="">Selecione</option>
                            <option value="Sim">Sim</option>
                            <option value="Não">Não</option>
                        </select>
                        <span asp-validation-for="Translado" class="text-danger"></span>
                    </div>

                </div>
            </section>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Cadastrar
                </button>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-danger ms-2">
                    <i class="bi bi-x-circle-fill me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
