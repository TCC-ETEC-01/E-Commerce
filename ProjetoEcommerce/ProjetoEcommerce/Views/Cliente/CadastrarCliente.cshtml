@model ProjetoEcommerce.Models.tbCliente

@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<link rel="stylesheet" href="~/css/ClienteCadastro.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<main>
    <div class="card-form">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-person-plus-fill"></i>
            <div>
                <h2 class="mb-0 fw-bold">Cadastrar Cliente</h2>
                <small>Preencha os dados do novo cliente</small>
            </div>
        </div>

        <form asp-action="CadastrarCliente" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <section class="form-section">
                <h5><i class="bi bi-person-fill"></i> Dados do Cliente</h5>

                <div class="row g-4">

                    <div class="col-md-6">
                        <label asp-for="Nome" class="form-label">
                            <i class="bi bi-card-text"></i> Nome *
                        </label>
                        <input asp-for="Nome" class="form-control" placeholder="Nome completo" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Sexo" class="form-label">
                            <i class="bi bi-gender-ambiguous"></i> Sexo *
                        </label>
                        <select asp-for="Sexo" class="form-select">
                            <option value="Masculino">Masculino</option>
                            <option value="Feminino">Feminino</option>
                            <option value="Outro">Outro</option>
                        </select>
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">
                            <i class="bi bi-envelope"></i> Email *
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="exemplo@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefone" class="form-label">
                            <i class="bi bi-telephone"></i> Telefone *
                        </label>
                        <input asp-for="Telefone" class="form-control" placeholder="(00) 00000-0000" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Cpf" class="form-label">
                            <i class="bi bi-person-vcard"></i> CPF *
                        </label>
                        <input asp-for="Cpf" class="form-control" placeholder="000.000.000-00" />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>

                </div>
            </section>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Cadastrar
                </button>
                <a asp-controller="Cliente" asp-action="Index" class="btn btn-danger ms-2">
                    <i class="bi bi-x-circle-fill me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
