@model ProjetoEcommerce.Models.tbCliente;
<!--Editar Cliente-->
<link href="~/css/editarcliente.css" rel="stylesheet" />

<body>
<div class="btn-nav col d-flex justify-content-end align-items-start pt-3">
    <a asp-controller="Dashboard" asp-action="Index" class="btn rounded-3 btn-primary">
        <i class="bi bi-arrow-left-circle"></i> Voltar
    </a>
</div>
<h2 class="tituloEditar">Editar Cliente</h2>
    <form asp-action="EditarCliente" class="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container-cadastro w-100 h-100">
            <div class="form-group">
                <input type="hidden" asp-for="IdCliente" class="form-control" />
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="row cadastro-row">
               
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control cadastro-input" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control cadastro-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group pt-3">
                    <label asp-for="Sexo" class="control-label"></label>
                    <select asp-for="Sexo" class="form-control cadastro-input">
                        <option value="Masculino">Masculino</option>
                        <option value="Feminino">Feminino</option>
                        <option value="Indefinido">Indefinido</option>
                    </select>
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cpf" class="control-label">CPF</label>
                    <input asp-for="Cpf" class="form-control cadastro-input" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class=" form-group">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control cadastro-input" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-check-inline mt-4">
                <button type="submit" class="btn btn-primary text-center ps-5 pe-5 fs-5 p-2">Alterar</button>
                <button type="reset" class="btn btn-danger text-center ps-5 pe-5 fs-5 p-2">Cancelar</button>
            </div>
        </div>
    </form>
</body>