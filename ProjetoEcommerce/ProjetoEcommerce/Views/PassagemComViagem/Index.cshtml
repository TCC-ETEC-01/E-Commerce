@model IEnumerable<ProjetoEcommerce.Models.tbPassagemComViagem>
<link href="~/css/passagemcomviagemindex.css" rel="stylesheet" />

<div class="tudo">
    <nav class="nav pt-3">
    <div class="container row ">
        <div class="text-star col">
            <h1 class="text-primary">Anu Viagens</h1>
            <p class="text-nav fs-6">Acompanhe todos os seus registros em um Ãºnico lugar.</p>
            <div class="d-flex 	justify-content-start  p-2 pb-1">
                <div class="search-box">
                    <input type="text" id="inputPesquisa" class="search-txt text-white" placeholder="Pesquisar...">
                    <a href="#" class="search-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                             class="bi bi-search" viewBox="0 0 16 16">
                          <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
        <div class="btn-nav col d-flex justify-content-end align-items-start pt-3">
            <a asp-controller="Dashboard" asp-action="Index" class="btn rounded-3 btn-primary">
                <i class="bi bi-arrow-left-circle"></i> Voltar
            </a>
        </div>
    </div>
</nav>
<section>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th>Identificador</th>
                            <th>Partida</th>
                            <th>Retorno</th>
                            <th>Origem</th>
                            <th>Destino</th>
                            <th>Assento</th>
                            <th>Tipo</th>
                            <th>Código</th>
                            <th>Translado</th>
                            <th>Companhia</th>
                            <th>Valor</th>
                            <th>Descrição</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdPassagem</td>
                                <td class="text-truncate" style="max-width: 200px;" title="@item.DataPartida">@item.DataPartida</td>
                                <td class="text-truncate" style="max-width: 200px;" title="@item.DataRetorno">@item.DataRetorno</td>
                                <td class="text-truncate" style="max-width: 200px;" title="@item.Origem">@item.Origem</td>
                                <td class="text-truncate" style="max-width: 200px;" title="@item.Destino">@item.Destino</td>
                                <td>@item.Assento</td>
                                <td>@item.TipoTransporte</td>
                                <td>@item.CodigoTransporte</td>
                                <td>@item.Translado</td>
                                <td class="text-truncate" style="max-width: 200px;" title="@item.Companhia">@item.Companhia</td>
                                <td>@item.Valor</td>
                                <td class="text-truncate" style="max-width: 300px;" title="@item.Descricao">@item.Descricao</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-controller="Passagem" asp-action="EditarPassagem" asp-route-id="@item.IdPassagem"
                                               class="btn btnEditar" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-controller="Passagem" asp-action="ExcluirPassagem" asp-route-id="@item.IdPassagem"
                                           onclick="return confirm('Deseja realmente excluir essa passagem?');"
                                               class="btn btnCor" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
</div>