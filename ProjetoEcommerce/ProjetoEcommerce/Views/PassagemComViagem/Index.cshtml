@model IEnumerable<ProjetoEcommerce.Models.tbPassagemComViagem>

<link href="~/css/clienteindex.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="tudo">
    <nav class="nav pt-3">
        <div class="container row">
            <div class="text-star col">
                <h1 class="text-primary">Anu Viagens</h1>
                <p class="text-nav text-light fs-6">Acompanhe todos os seus registros em um único lugar.</p>
                <form method="get" asp-action="Index" asp-controller="PassagemComViagem" class="d-flex justify-content-start p-2 pb-1">
                    <div class="search-box">
                        <input type="text" name="destino" class="search-txt text-white" placeholder="Pesquisar destino...">
                        <button type="submit" class="search-btn" title="Pesquisar">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                 class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                            </svg>
                        </button>
                    </div>
                </form>
            </div>
            <div class="btn-nav col d-flex justify-content-end align-items-start pt-3 gap-2">
                <a asp-controller="Passagem" asp-action="CadastrarPassagem"
                   class="btn rounded-3 btn-primary" title="Cadastrar">
                    <i class="bi bi-person-plus"></i> Cadastrar
                </a>
                <a asp-controller="Dashboard" asp-action="Index"
                   class="btn rounded-3 btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Voltar
                </a>
            </div>
        </div>
    </nav>

    <section class="p-3">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th>Identificador</th>
                                <th>Partida</th>
                                <th>Retorno</th>
                                <th>Origem</th>
                                <th>Destino</th>
                                <th>Situação</th>
                                <th>Assento</th>
                                <th>Tipo</th>
                                <th>Código</th>
                                <th>Translado</th>
                                <th>Companhia</th>
                                <th>Valor</th>
                                <th>Descrição</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.IdPassagem</td>
                                    <td class="text-truncate" style="max-width: 200px;" title="@item.DataPartida">@item.DataPartida</td>
                                    <td class="text-truncate" style="max-width: 200px;" title="@item.DataRetorno">@item.DataRetorno</td>
                                    <td class="text-truncate" style="max-width: 200px;" title="@item.Origem">@item.Origem</td>
                                    <td class="text-truncate" style="max-width: 200px;" title="@item.Destino">@item.Destino</td>
                                    <td class="text-truncate" style="max-width: 200px;" title="@item.Situacao">@item.Situacao</td>
                                    <td>@item.Assento</td>
                                    <td>@item.TipoTransporte</td>
                                    <td>@item.CodigoTransporte</td>
                                    <td>@item.Translado</td>
                                    <td class="text-truncate" style="max-width: 200px;" title="@item.Companhia">@item.Companhia</td>
                                    <td>@item.Valor.ToString("C")</td>
                                    <td class="text-truncate" style="max-width: 300px;" title="@item.Descricao">@item.Descricao</td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-controller="Passagem" asp-action="EditarPassagem" asp-route-id="@item.IdPassagem"
                                               class="btn btnEditar" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-controller="Passagem" asp-action="ExcluirPassagem" asp-route-id="@item.IdPassagem"
                                               onclick="return confirm('Deseja realmente excluir essa passagem?');"
                                               class="btn btnCor" title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                            <button type="button"
                                                    class="btn btn-success"
                                                    title="Comprar Passagem"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modalRegistrarCompra"
                                                    data-passagemid="@item.IdPassagem"
                                                    data-valor="@item.Valor">
                                                <i class="bi bi-cart-plus"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

]<div class="modal fade" id="modalRegistrarCompra" tabindex="-1" aria-labelledby="modalRegistrarCompraLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalRegistrarCompraLabel">
                    <i class="bi bi-cart-plus-fill"></i> Registrar Compra
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>

            <div class="modal-body">
                <form asp-action="ComprarPassagem" method="post" novalidate id="formCompra">
                    <input type="hidden" id="IdPassagem" name="idPassagem" />

                    <div class="mb-3">
                        <label for="idCliente" class="form-label">Id Cliente</label>
                        <input type="number" id="idCliente" name="idCliente" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label for="idFuncionario" class="form-label">Id Funcionário</label>
                        <input type="number" id="idFuncionario" name="idFuncionario" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label for="valor" class="form-label">Valor</label>
                        <input type="number" id="valor" name="Valor" class="form-control" step="0.01" readonly />
                    </div>

                    <div class="mb-3">
                        <label for="formaPagamento" class="form-label">Forma de Pagamento</label>
                        <input type="text" id="formaPagamento" name="FormaPagamento" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label for="dataVenda" class="form-label">Data da Venda</label>
                        <input type="date" id="dataVenda" name="DataVenda" class="form-control" required />
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i> Confirmar Compra
                        </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const modalRegistrarCompra = document.getElementById('modalRegistrarCompra');
        modalRegistrarCompra.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const passagemId = button.getAttribute('data-passagemid');
            const valor = button.getAttribute('data-valor');

            // Atualiza os campos da modal
            document.getElementById('IdPassagem').value = passagemId;
            document.getElementById('valor').value = valor;
            document.getElementById('dataVenda').valueAsDate = new Date();
        });
    </script>
}
