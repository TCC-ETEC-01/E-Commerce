@model IEnumerable<ProjetoEcommerce.Models.tbPassagemComViagem>
<link href="~/css/passagemcomviagemindex.css" rel="stylesheet" />

<nav class="nav">
    <div class="container row ">
        <div class="text-star col">
            <h1 class="text-primary">Anu Viagens</h1>
            <p class="text-nav fs-6">Acompanhe todos os seus registros em um único lugar.</p>
            <div class="d-flex 	justify-content-start  p-2 pb-1">
                <div class="search-box">
                    <input type="text" id="inputPesquisa" class="search-txt text-white" placeholder="Pesquisar...">
                    <a href="#" class="search-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                             class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
        <div class="btn-nav col d-flex justify-content-end align-items-start pt-3">
            <a asp-controller="Dashboard" asp-action="Index" class="btn rounded-3 btn-primary">
                <i class="bi bi-arrow-left-circle"></i> Voltar
            </a>
        </div>
    </div>
</nav>


<section>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th style="max-width: 600px;">
                                @Html.DisplayNameFor(model => model.IdPassagem)
                            </th>
                            <th style="max-width: 600px;">
                                @Html.DisplayNameFor(model => model.DataPartida)
                            </th>
                            <th style="max-width: 600px;">
                                @Html.DisplayNameFor(model => model.DataRetorno)
                            </th>
                            <th style="max-width: 600px;">
                                @Html.DisplayNameFor(model => model.Origem)

                            </th>
                            <th style="max-width: 600px;">
                                @Html.DisplayNameFor(model => model.Destino)

                            </th>
                            <th style="max-width: 600px;">
                                @Html.DisplayNameFor(model => model.Assento)

                            </th>
                            <th style="max-width: 600px;">
                                @Html.DisplayNameFor(model => model.TipoTransporte)
                            </th>
                            </th style="max-width: 400px;">
                            <th>
                                @Html.DisplayNameFor(model => model.CodigoTransporte)
                            </th>
                            <th style="max-width: 600px;">
                                @Html.DisplayNameFor(model => model.Translado)
                            </th>
                            <th style="max-width: 600px;">
                                @Html.DisplayNameFor(model => model.Companhia)
                            </th>
                            <th style="max-width: 600px;">
                                @Html.DisplayNameFor(model => model.Valor)
                            </th>
                            <th style="max-width: 600px;">
                                @Html.DisplayNameFor(model => model.Descricao)

                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-truncate" style="max-width: 600px;">
                                    @Html.DisplayFor(modelitem => item.IdPassagem)
                                </td>
                                <td class="text-truncate" style="max-width: 600px;">
                                    @Html.DisplayFor(modelitem => item.DataPartida)
                                </td>
                                <td class="text-truncate" style="max-width: 600px;">
                                    @Html.DisplayFor(modelitem => item.DataRetorno)
                                </td>
                                <td class="text-truncate" style="max-width: 600px;">
                                    @Html.DisplayFor(modelitem => item.Origem)
                                </td>
                                <td class="text-truncate" style="max-width: 600px;">
                                    @Html.DisplayFor(modelitem => item.Destino)
                                </td>
                                <td class="text-truncate" style="max-width: 600px;">
                                    @Html.DisplayFor(modelitem => item.Assento)
                                </td>
                                <td class="text-truncate" style="max-width: 600px;">
                                    @Html.DisplayFor(modelitem => item.TipoTransporte)
                                </td>
                                <td class="text-truncate" style="max-width: 600px;">
                                    @Html.DisplayFor(modelitem => item.CodigoTransporte)
                                </td>
                                <td class="text-truncate" style="max-width: 600px;">
                                    @Html.DisplayFor(modelitem => item.Translado)
                                </td>
                                <td class="text-truncate" style="max-width: 600px;">
                                    @Html.DisplayFor(modelitem => item.Companhia)
                                </td>
                                <td class="text-truncate" style="max-width: 600px;">
                                    @Html.DisplayFor(modelitem => item.Valor)
                                </td>
                                <td class="text-truncate" style="max-width: 600px;">
                                    @Html.DisplayFor(modelitem => item.Descricao)
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm " role="group">
                                        <a asp-controller="Produto" asp-action="EditarProduto" asp-route-id="@item.IdPassagem"
                                           class="btn btn-outline-primary  rounded-3  me-3" title="Editar">
                                            <i class="bi bi-pencil-square "></i>
                                        </a>
                                        <span> </span>
                                        <a asp-controller="Passagem" onclick="return confirm('Deseja realmente excluir esse Produto ?');" asp-action="ExcluirPassagem" asp-route-id="@item.IdPassagem"
                                           class="btn btn-outline-primary rounded-3" title="Voltar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
