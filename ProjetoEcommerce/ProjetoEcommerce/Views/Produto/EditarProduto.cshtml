<!--Criando editar Produto-->
@model ProjetoEcommerce.Models.tbProduto;

<link href="~/css/editarproduto.css" rel="stylesheet" />

<h2 class="tituloEditar text-light pt-5 p-5 pb-2">Editar Produto</h2>

<body>

    <img class="img bus" src="~/imagem/bus.png" />
    <img class="img sol" src="~/imagem/sol.png" />
    <img class="img tree" src="~/imagem/tree.png" />
    <img class="img bird" src="~/imagem/bird.png" />
    <img class="img tree2" src="~/imagem/tree.png" />


    <form asp-action="EditarProduto" method="post" class="FormTudo container  pt-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="IdProduto" class="form-control" />
            <span asp-validation-for="IdProduto" class="text-danger"></span>
        </div>
        <div class="row cadastro-row">
            <div class="form-group div-item pt-3">
                <label asp-for="NomeProduto" class="control-label"></label>
                <input asp-for="NomeProduto" class="form-control cadastro-input" />
                <span asp-validation-for="NomeProduto" class="text-danger"></span>
            </div>
            <div class="form-group  div-item pt-3">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control cadastro-input" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="form-group div-item pt-3">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control cadastro-input" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group div-item pt-3">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control cadastro-input" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div> 
            <div class=" btn form-group justify-content-center align-items-center  d-flex ">
                <button type="submit" class="btn btn-primary text-center ps-5 pe-5 fs-5 justify-content-center  p-2">Alterar</button>
            </div>
            <div class="btn form-group justify-content-center align-items-center  d-flex ">
                <button type="reset" class="btn  btn-secondary ps-5 pe-5 fs-5 justify-content-center  p-2">Cancelar</button>
            </div>
        </div>
    </form>
</body>