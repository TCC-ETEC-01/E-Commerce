@model ProjetoEcommerce.Models.tbProduto

@{
    ViewData["Title"] = "Editar Produto";
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
}

@if (ViewData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@ViewData["MensagemErro"]</div>
}

<link rel="stylesheet" href="~/css/EditarCliente.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<main>
    <div class="card-form">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-pencil-square"></i>
            <div>
                <h2 class="mb-0 fw-bold">Editar Produto</h2>
                <small>Atualize os dados do produto</small>
            </div>
        </div>

        <form asp-action="EditarProduto" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="IdProduto" />

            <section class="form-section">
                <div class="row g-4">

                    <div class="col-md-6">
                        <label asp-for="NomeProduto" class="form-label">
                            <i class="bi bi-tag-fill"></i> Nome do Produto
                        </label>
                        <input asp-for="NomeProduto" class="form-control" />
                        <span asp-validation-for="NomeProduto" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Valor" class="form-label">
                            <i class="bi bi-currency-dollar"></i> Valor
                        </label>
                        <input asp-for="Valor" class="form-control" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>

                    <div class="col-md-8">
                        <label asp-for="Descricao" class="form-label">
                            <i class="bi bi-card-text"></i> Descrição
                        </label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Quantidade" class="form-label">
                            <i class="bi bi-stack"></i> Quantidade
                        </label>
                        <input asp-for="Quantidade" class="form-control" />
                        <span asp-validation-for="Quantidade" class="text-danger"></span>
                    </div>

                </div>
            </section>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-5 py-2 fs-5 rounded-pill shadow-sm">
                    <i class="bi bi-save2-fill me-1"></i> Alterar
                </button>
                <a asp-controller="Produto" asp-action="Index" class="btn btn-danger">
                    <i class="bi bi-x-circle-fill me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
