<!--Criando editar Produto-->
@model ProjetoEcommerce.Models.tbProduto;
<link href="~/css/editarproduto.css" rel="stylesheet" />

<form asp-action="EditarProduto">
  <h2 class="tituloEditar pt-5 p-5 pb-2">Editar Produto</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row cadastro-row">
        <div class="col  form-group">
            <label asp-for="NomeProduto" class="labelEditar control-label "></label>
            <input asp-for="NomeProduto" class="form-control cadastro-input" />
            <span asp-validation-for="NomeProduto" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Valor" class="labelEditar control-label"></label>
            <input asp-for="Valor" class="form-control cadastro-input" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Descricao" class="labelEditar control-label"></label>
            <input asp-for="Descricao" class="form-control cadastro-input" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Quantidade" class="labelEditar control-label"></label>
            <input asp-for="Quantidade" class="form-control cadastro-input" />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
        <div class=" btn form-group justify-content-center align-items-center  d-flex ">
            <button type="submit" class="btn btn-primary text-center ps-5 pe-5 fs-5 justify-content-center  p-2" />Cadastrar</button>
        </div>
    </div>
</form>