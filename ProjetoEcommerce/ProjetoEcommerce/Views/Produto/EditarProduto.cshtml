@model ProjetoEcommerce.Models.tbProduto

<!-- Linka o CSS -->
<link rel="stylesheet" href="~/css/editarproduto.css" />

<div class="btn-nav col d-flex justify-content-end align-items-start pt-3">
    <a asp-controller="Dashboard" asp-action="Index" class="btn rounded-3 btn-primary">
        <i class="bi bi-arrow-left-circle"></i> Voltar
    </a>
</div>
<h2 class="tituloEditar">Editar Produto</h2>

<form asp-action="EditarProduto" method="post" class="FormTudo">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="IdProduto" />

    <div class="form-group div-item">
        <label asp-for="NomeProduto"></label>
        <input asp-for="NomeProduto" class="form-control cadastro-input" />
        <span asp-validation-for="NomeProduto" class="text-danger"></span>
    </div>

    <div class="form-group div-item">
        <label asp-for="Valor"></label>
        <input asp-for="Valor" class="form-control cadastro-input" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="form-group div-item">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control cadastro-input" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group div-item">
        <label asp-for="Quantidade"></label>
        <input asp-for="Quantidade" class="form-control cadastro-input" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>

    <div class="botoes">
        <button type="submit" class="btn btn-primary">Alterar</button>
        <button type="reset" class="btn btn-secondary">Cancelar</button>
    </div>
</form>
