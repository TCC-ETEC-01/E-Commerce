@model IEnumerable<ProjetoEcommerce.Models.tbProduto>

<nav class="nav">
    <div class="container">
        <div class="text-star">
            <h1 class="text-primary">Anu Produtos</h1>
            <p class="text-nav fs-6">Gerencie todos os produtos cadastrados na plataforma.</p>
            <a asp-controller="Dashboard" asp-action="Index" class="btn rounded-3 btn-primary">
                <i class="bi bi-arrow-left-circle"></i> Voltar
            </a>
        </div>
    </div>
</nav>
<section>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th width="8%">Identificador</th>
                            <th>Nome</th>
                            <th>Valor</th>
                            <th>Descrição</th>
                            <th>Quantidade</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.IdProduto)</td>
                                <td>@Html.DisplayFor(modelItem => item.NomeProduto)</td>
                                <td>@Html.DisplayFor(modelItem => item.Valor)</td>
                                <td class="text-truncate" style="max-width: 300px;" title="@item.Descricao">
                                    @item.Descricao
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Quantidade)</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-controller="Produto" asp-action="EditarProduto" asp-route-id="@item.IdProduto"
                                           class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-controller="Produto" asp-action="ExcluirProduto" asp-route-id="@item.IdProduto"
                                           onclick="return confirm('Deseja realmente excluir esse Produto ?');"
                                           class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
