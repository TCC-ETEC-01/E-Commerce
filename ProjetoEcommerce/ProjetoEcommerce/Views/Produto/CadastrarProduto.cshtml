@model ProjetoEcommerce.Models.tbProduto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
}

@if (ViewData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@ViewData["MensagemErro"]</div>
}


<link rel="stylesheet" href="~/css/clientecadastro.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<main>
    <div class="card-form">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-box-seam"></i>
            <div>
                <h2 class="mb-0 fw-bold">Cadastrar Produto</h2>
                <small>Preencha os dados do novo produto</small>
            </div>
        </div>

        <form asp-action="CadastrarProduto" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <section class="form-section">
                <h5><i class="bi bi-card-list me-1"></i> Detalhes do Produto</h5>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="NomeProduto" class="form-label">
                            <i class="bi bi-tag-fill me-1"></i> Nome do Produto
                        </label>
                        <input asp-for="NomeProduto" class="form-control" placeholder="Digite o nome do produto" />
                        <span asp-validation-for="NomeProduto" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Valor" class="form-label">
                            <i class="bi bi-currency-dollar me-1"></i> Valor
                        </label>
                        <input asp-for="Valor" type="number" step="0.01" class="form-control" placeholder="Digite o valor" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>

                    <div class="col-md-8">
                        <label asp-for="Descricao" class="form-label">
                            <i class="bi bi-card-text me-1"></i> Descrição
                        </label>
                        <input asp-for="Descricao" class="form-control" placeholder="Descrição do produto" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Quantidade" class="form-label">
                            <i class="bi bi-stack me-1"></i> Quantidade
                        </label>
                        <input asp-for="Quantidade" type="number" class="form-control" placeholder="Quantidade em estoque" />
                        <span asp-validation-for="Quantidade" class="text-danger"></span>
                    </div>
                </div>
            </section>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Cadastrar
                </button>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-danger ms-2">
                    <i class="bi bi-x-circle-fill me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
