<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoEcommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoEcommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand titulo-nav fs-3 fw-bold me-5" asp-area="" asp-controller="Home" asp-action="Index">
                    Anu Viagens
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav d-flex flex-row align-items-center gap-3 fs-5">
                        <li class="nav-item cargo">
                            <a class="nav-link d-flex align-items-center" asp-controller="Produto" asp-action="Index">
                                <i class="bi bi-box-seam fs-4 me-2"></i> Produtos
                            </a>
                        </li>
                        <li class="nav-item cargo">
                            <a class="nav-link d-flex align-items-center" asp-controller="PacoteComPassagemProduto" asp-action="Index">
                                <i class="bi bi-bag-plus fs-4 me-2"></i> Pacotes
                            </a>
                        </li>
                        <li class="nav-item cargo">
                            <a class="nav-link d-flex align-items-center" asp-controller="PassagemComViagem" asp-action="Index">
                                <i class="bi bi-ticket-perforated fs-4 me-2"></i> Passagens
                            </a>
                        </li>
                        <li class="nav-item cargo">
                            <a class="nav-link d-flex align-items-center" asp-controller="DashBoard" asp-action="CadastroHome">
                                <i class="bi bi-pencil-square fs-4 me-2"></i> Cadastros
                            </a>
                        </li>
                        <li class="nav-item cargo">
                            <a class="nav-link d-flex align-items-center" asp-controller="DashBoard" asp-action="Index">
                                <i class="bi bi-person-badge fs-4 me-2"></i> Funcionário
                            </a>
                        </li>
                        <li class="nav-item cargo">
                            <a class="nav-link d-flex align-items-center" asp-controller="Passagem" asp-action="ComprarPassagem">
                                <i class="bi bi-cart-plus fs-4 me-2"></i> Comprar Passagem
                            </a>
                        </li>
                        <li class="nav-item cargo">
                            <a class="nav-link saida d-flex align-items-center" asp-controller="Funcionario" asp-action="Login">
                                <i class="bi bi-box-arrow-right fs-4 me-2"></i> Sair
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>

