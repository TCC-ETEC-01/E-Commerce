@model ProjetoEcommerce.Models.tbFuncionario
@{
    Layout = "_Layout";
}

<link href="~/css/funcionariologin.css" rel="stylesheet" />
<body>
    <section class="row pt-5 ">       
        <div class="col-6 pt-5 ">
            <div class="Imagem">
                <img src="~/imagem/logo.png" class="logo" />
                <label class="anu"><h1>Anu Viagens</h1></label>
                <label class="anu2">O Brasil que você nunca imaginou</label>
            </div>
        </div>
        <div class="col ps-5">
            <form asp-action="Login" method="post" class="login-form justify-content-center">
                <div class="Titulo">
                    <h1 class="title">Anu Viagens</h1>
                    <h5>Acesso ao Sistema</h5>
                </div>
                <div class="form-group">
                    <label asp-for="Email">EMAIL</label>
                    <input asp-for="Email" type="email" name="email" required class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Senha">SENHA</label>
                    <input asp-for="Senha" type="password" name="senha" required class="form-control" />
                </div>
                <div class="buttonLogin d-flex justify-content-center">
                    <button type="submit" class="btnLogin">Entrar</button>
                </div>
            </form>
        </div>
    </section>
</body>