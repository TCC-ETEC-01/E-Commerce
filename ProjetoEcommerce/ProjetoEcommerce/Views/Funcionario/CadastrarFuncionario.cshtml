@model ProjetoEcommerce.Models.tbFuncionario

@{
    ViewData["Title"] = "Cadastrar Funcionário";
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
}

@if (ViewData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@ViewData["MensagemErro"]</div>
}


<link rel="stylesheet" href="~/css/clientecadastro.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<main>
    <div class="card-form">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-person-plus-fill"></i>
            <div>
                <h2 class="mb-0 fw-bold">Cadastrar Funcionário</h2>
                <small>Preencha os dados do novo funcionário</small>
            </div>
        </div>

        <form asp-action="CadastrarFuncionario" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <section class="form-section">
                <h5><i class="bi bi-person-circle"></i>Informações Pessoais</h5>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Nome" class="form-label">
                            <i class="bi bi-person-fill"></i>Nome *
                        </label>
                        <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">
                            <i class="bi bi-envelope-fill"></i>Email *
                        </label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="usuario@exemplo.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Sexo" class="form-label">
                            <i class="bi bi-gender-ambiguous"></i>Sexo
                        </label>
                        <select asp-for="Sexo" class="form-select">
                            <option value="">Selecione</option>
                            <option value="Masculino">Masculino</option>
                            <option value="Feminino">Feminino</option>
                            <option value="Indefinido">Indefinido</option>
                        </select>
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Cpf" class="form-label">
                            <i class="bi bi-credit-card-2-front-fill"></i>CPF
                        </label>
                        <input asp-for="Cpf" class="form-control" placeholder="000.000.000-00" />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Telefone" class="form-label">
                            <i class="bi bi-telephone-fill"></i>Telefone
                        </label>
                        <input asp-for="Telefone" class="form-control" placeholder="(11) 99999-9999" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Cargo" class="form-label">
                            <i class="bi bi-briefcase-fill"></i>Cargo
                        </label>
                        <input asp-for="Cargo" class="form-control" placeholder="Cargo do funcionário" />
                        <span asp-validation-for="Cargo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Senha" class="form-label">
                            <i class="bi bi-key-fill"></i>Senha
                        </label>
                        <input asp-for="Senha" type="password" class="form-control" placeholder="Senha de acesso" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                </div>
            </section>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Cadastrar
                </button>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-danger">
                    <i class="bi bi-x-circle-fill me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
