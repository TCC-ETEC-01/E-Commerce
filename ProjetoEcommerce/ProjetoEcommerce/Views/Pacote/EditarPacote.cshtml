@model ProjetoEcommerce.Models.tbPacote
<!--Editar Pacote-->
<link href="~/css/editarpacote.css" rel="stylesheet" />


<div class="btn-nav col d-flex justify-content-end align-items-start pt-3">
    <a asp-controller="Dashboard" asp-action="Index" class="btn rounded-3 btn-primary">
        <i class="bi bi-arrow-left-circle"></i> Voltar
    </a>
</div>
<h2 class="tituloEditar pt-4 pb-2">Editar Pacote</h2>

<form asp-action="EditarPacote" method="post" class="FormTudo container pt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group  div-item">
        <input type="hidden" asp-for="IdPacote" class="form-control" />
        <span asp-validation-for="IdPacote" class="text-danger"></span>
    </div>

    <div class="form-group div-item pt-3">
        <label for="IdPassagem_IdPassagem" class="control-label">ID da passagem</label>
        <input name="IdPassagem.IdPassagem" value="@Model.IdPassagem?.IdPassagem" class="form-control cadastro-input" />
        <span asp-validation-for="IdPassagem.IdPassagem" class="text-danger"></span>
    </div>

    <div class="form-group div-item pt-3">
        <label for="IdProduto_IdProduto" class="control-label">ID do produto</label>
        <input name="IdProduto.IdProduto" value="@Model.IdProduto?.IdProduto" class="form-control cadastro-input" />
        <span asp-validation-for="IdProduto.IdProduto" class="text-danger"></span>
    </div>

    <div class="form-group div-item pt-3">
        <label asp-for="NomePacote" class="control-label"></label>
        <input asp-for="NomePacote" class="form-control cadastro-input" />
        <span asp-validation-for="NomePacote" class="text-danger"></span>
    </div>

    <div class="form-group div-item pt-3">
        <label asp-for="Descricao" class="control-label"></label>
        <input asp-for="Descricao" class="form-control cadastro-input" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group div-item pt-3">
        <label asp-for="Valor" class="control-label"></label>
        <input asp-for="Valor" class="form-control cadastro-input" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="btn form-group justify-content-center align-items-center d-flex pt-4">
        <button type="submit" class="btn ps-5 pe-5 fs-5 justify-content-center p-2">Alterar</button>
    </div>

    <div class="btn form-group justify-content-center align-items-center d-flex">
        <button type="reset" class="btn ps-5 pe-5 fs-5 justify-content-center p-2">Cancelar</button>
    </div>
    </div>
</form>
