@model ProjetoEcommerce.Models.tbPacote

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="~/css/clientecadastro.css" rel="stylesheet" />

<body>
    <main class="container py-4">
        <header class="bg-gradient text-white rounded-4 p-4 mb-4" style="background: linear-gradient(90deg, #4e54c8, #8f94fb);">
            <div class="d-flex align-items-center gap-3 mb-2">
                <i class="bi bi-box-seam fs-2"></i>
                <div>
                    <h2 class="mb-0 fw-bold">Cadastrar Pacote</h2>
                    <small>Preencha as informações do pacote</small>
                </div>
            </div>
        </header>

        <form asp-action="CadastrarPacote" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <section class="bg-light rounded-3 p-4 shadow-sm border">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="IdPassagem" class="form-label">
                            <i class="bi bi-ticket-fill me-1 text-primary"></i> Id Passagem
                        </label>
                        <input asp-for="IdPassagem" type="number" class="form-control" placeholder="ID da passagem" />
                        <span asp-validation-for="IdPassagem" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="IdProduto" class="form-label">
                            <i class="bi bi-bag-fill me-1 text-primary"></i> Id Produto
                        </label>
                        <input asp-for="IdProduto" type="number" class="form-control" placeholder="ID do produto" />
                        <span asp-validation-for="IdProduto" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="NomePacote" class="form-label">
                            <i class="bi bi-card-text me-1 text-primary"></i> Nome Pacote
                        </label>
                        <input asp-for="NomePacote" class="form-control" placeholder="Nome do pacote" />
                        <span asp-validation-for="NomePacote" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Descricao" class="form-label">
                            <i class="bi bi-info-circle-fill me-1 text-primary"></i> Descrição
                        </label>
                        <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descrição detalhada do pacote"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Valor" class="form-label">
                            <i class="bi bi-currency-dollar me-1 text-primary"></i> Valor
                        </label>
                        <input asp-for="Valor" type="number" step="0.01" class="form-control" placeholder="Valor do pacote" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                </div>
            </section>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-5 py-2 fs-5 rounded-pill shadow-sm">
                    <i class="bi bi-check-circle me-2"></i> Cadastrar
                </button>
            </div>
        </form>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
