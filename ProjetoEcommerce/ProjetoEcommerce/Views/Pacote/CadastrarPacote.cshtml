@model ProjetoEcommerce.Models.tbPacote

@{
    ViewData["Title"] = "Cadastrar Pacote";
}

<link rel="stylesheet" href="~/css/clientecadastro.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<main>
    <div class="card-form">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-box-seam"></i>
            <div>
                <h2 class="mb-0 fw-bold">Cadastrar Pacote</h2>
                <small>Preencha as informações do pacote</small>
            </div>
        </div>

        <form asp-action="CadastrarPacote" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <section class="form-section">
                <h5><i class="bi bi-box-fill"></i>Detalhes do Pacote</h5>

                <div class="row g-4">
                    <div class="col-md-4">
                        <label asp-for="IdPassagem" class="form-label">
                            <i class="bi bi-ticket-fill"></i>Id Passagem
                        </label>
                        <input asp-for="IdPassagem" type="number" class="form-control" placeholder="ID da passagem" />
                        <span asp-validation-for="IdPassagem" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="IdProduto" class="form-label">
                            <i class="bi bi-bag-fill"></i>Id Produto
                        </label>
                        <input asp-for="IdProduto" type="number" class="form-control" placeholder="ID do produto" />
                        <span asp-validation-for="IdProduto" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="NomePacote" class="form-label">
                            <i class="bi bi-card-text"></i>Nome Pacote
                        </label>
                        <input asp-for="NomePacote" class="form-control" placeholder="Nome do pacote" />
                        <span asp-validation-for="NomePacote" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Descricao" class="form-label">
                            <i class="bi bi-info-circle-fill"></i>Descrição
                        </label>
                        <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descrição detalhada do pacote"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Valor" class="form-label">
                            <i class="bi bi-currency-dollar"></i>Valor
                        </label>
                        <input asp-for="Valor" type="number" step="0.01" class="form-control" placeholder="Valor do pacote" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                </div>
            </section>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Cadastrar
                </button>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-danger">
                    <i class="bi bi-x-circle-fill me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
