<link href="~/css/dashboardindex.css" rel="stylesheet" />

<div class="tudo">
    <div class="text-star text-center mb-4">
        <h1 class="text-primary">Anu Viagens</h1>
        <p class="text-nav fs-6">Acompanhe todos os seus registros em um único lugar.</p>
    </div>

    <section class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">

            <!-- Produtos -->
            <div class="col p-2">
                <div class="card card-maid h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <h3 class="card-title pe-2 mb-0">Produtos</h3>
                            <i class="bi bi-basket2 fs-5"></i>
                        </div>
                        <p class="card-text fs-6 text-muted">Acesse o sistema</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-center">
                        <a asp-controller="Produto" asp-action="Index" class="btnDash fs-6">Ver Detalhes</a>
                    </div>
                </div>
            </div>

            <!-- Pacotes -->
            <div class="col p-2">
                <div class="card card-maid h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <h3 class="card-title pe-2 mb-0">Pacotes</h3>
                            <i class="bi bi-box-seam fs-5"></i>
                        </div>
                        <p class="card-text fs-6 text-muted">Acesse o sistema</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-center">
                        <a asp-controller="PacoteComPassagemProduto" asp-action="Index" class="btnDash fs-6">Ver Detalhes</a>
                    </div>
                </div>
            </div>

            <!-- Passagens -->
            <div class="col p-2">
                <div class="card card-maid h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <h3 class="card-title pe-2 mb-0">Passagens</h3>
                            <i class="bi bi-ticket-perforated fs-5"></i>
                        </div>
                        <p class="card-text fs-6 text-muted">Acesse o sistema</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-center">
                        <a asp-controller="PassagemComViagem" asp-action="Index" class="btnDash fs-6">Ver Detalhes</a>
                    </div>
                </div>
            </div>

            <!-- Funcionários -->
            <div class="col p-2">
                <div class="card card-maid h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <h3 class="card-title pe-2 mb-0">Funcionários</h3>
                            <i class="bi bi-person-badge fs-5"></i>
                        </div>
                        <p class="card-text fs-6 text-muted">Acesse o sistema</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-center">
                        <a asp-controller="Funcionario" asp-action="Index" class="btnDash fs-6">Ver Detalhes</a>
                    </div>
                </div>
            </div>

            <!-- Cliente -->
            <div class="col p-2">
                <div class="card card-maid h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <h3 class="card-title pe-2 mb-0">Cliente</h3>
                            <i class="bi bi-people-fill fs-5"></i>
                        </div>
                        <p class="card-text fs-6 text-muted">Acesse o sistema</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-center">
                        <a asp-controller="Cliente" asp-action="Index" class="btnDash fs-6">Ver Detalhes</a>
                    </div>
                </div>
            </div>

            <!-- Transportes -->
            <div class="col p-2">
                <div class="card card-maid h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <h3 class="card-title pe-2 mb-0">Transportes</h3>
