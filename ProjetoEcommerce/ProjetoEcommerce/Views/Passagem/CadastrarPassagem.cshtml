@model ProjetoEcommerce.Models.tbPassagem

@{
    ViewData["Title"] = "Cadastrar Passagem";
}

<link rel="stylesheet" href="~/css/clientecadastro.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<main>
    <div class="card-form">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-airplane-fill"></i>
            <div>
                <h2 class="mb-0 fw-bold">Cadastrar Passagem</h2>
                <small>Preencha os dados da nova passagem</small>
            </div>
        </div>

        <form asp-action="CadastrarPassagem" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <section class="form-section">
                <h5><i class="bi bi-ticket-perforated-fill me-1"></i> Informações da Passagem</h5>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="IdViagem" class="form-label">
                            <i class="bi bi-map-fill"></i> Id Viagem
                        </label>
                        <input asp-for="IdViagem" type="number" class="form-control" placeholder="Id da viagem" />
                        <span asp-validation-for="IdViagem" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdTransporte" class="form-label">
                            <i class="bi bi-truck-front-fill"></i> Id Transporte
                        </label>
                        <input asp-for="IdTransporte" type="number" class="form-control" placeholder="Id do transporte" />
                        <span asp-validation-for="IdTransporte" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Valor" class="form-label">
                            <i class="bi bi-currency-dollar"></i> Valor
                        </label>
                        <input asp-for="Valor" type="number" step="0.01" class="form-control" placeholder="Valor da passagem" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Assento" class="form-label">
                            <i class="bi bi-ui-checks-grid"></i> Assento
                        </label>
                        <input asp-for="Assento" class="form-control" placeholder="Número do assento" />
                        <span asp-validation-for="Assento" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Situacao" class="form-label">
                            <i class="bi bi-info-circle-fill"></i> Situação
                        </label>
                        <select asp-for="Situacao" class="form-select">
                            <option value="">-- Selecione --</option>
                            <option value="Disponivel">Disponível</option>
                            <option value="Indisponivel">Indisponível</option>
                        </select>
                        <span asp-validation-for="Situacao" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Translado" class="form-label">
                            <i class="bi bi-arrow-repeat"></i> Translado
                        </label>
                        <select asp-for="Translado" class="form-select">
                            <option value="">-- Selecione --</option>
                            <option value="Sim">Sim</option>
                            <option value="Não">Não</option>
                        </select>
                        <span asp-validation-for="Translado" class="text-danger"></span>
                    </div>
                </div>
            </section>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Cadastrar
                </button>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-danger">
                    <i class="bi bi-x-circle-fill me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
