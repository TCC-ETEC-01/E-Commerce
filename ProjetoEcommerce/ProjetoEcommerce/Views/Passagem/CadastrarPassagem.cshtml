@model ProjetoEcommerce.Models.tbVenda

@{
    ViewData["Title"] = "Registrar Compra";
}

<link rel="stylesheet" href="~/css/registrocompra.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<main>
    <div class="card-form">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-bag-check-fill fs-2 me-3" style="color:#0e4ce0;"></i>
            <div>
                <h2 class="mb-0 fw-bold" style="color:#0e4ce0;">Registrar Compra</h2>
                <small>Preencha os dados da nova venda</small>
            </div>
        </div>

        <form asp-action="ComprarPassagem" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <section class="form-section">
                <h5><i class="bi bi-info-circle-fill me-1" style="color:#0e4ce0;"></i> Dados da Compra</h5>

                <div class="row g-4">
                    <div class="col-md-4">
                        <label for="idCliente" class="form-label">
                            <i class="bi bi-person-fill" style="color:#0e4ce0;"></i> Id Cliente
                        </label>
                        <input type="number" name="idCliente" id="idCliente" class="form-control" placeholder="Id do cliente" required />
                    </div>

                    <div class="col-md-4">
                        <label for="idPassagem" class="form-label">
                            <i class="bi bi-ticket-perforated-fill" style="color:#0e4ce0;"></i> Id Passagem
                        </label>
                        <input type="number" name="idPassagem" id="idPassagem" class="form-control" placeholder="Id da passagem" required />
                    </div>

                    <div class="col-md-4">
                        <label for="idFuncionario" class="form-label">
                            <i class="bi bi-person-badge-fill" style="color:#0e4ce0;"></i> Id Funcionário
                        </label>
                        <input type="number" name="idFuncionario" id="idFuncionario" class="form-control" placeholder="Id do funcionário" required />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Valor" class="form-label">
                            <i class="bi bi-currency-dollar" style="color:#0e4ce0;"></i> Valor
                        </label>
                        <input asp-for="Valor" type="number" step="0.01" class="form-control" placeholder="Valor da venda" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="FormaPagamento" class="form-label">
                            <i class="bi bi-credit-card-2-front-fill" style="color:#0e4ce0;"></i> Forma de Pagamento
                        </label>
                        <input asp-for="FormaPagamento" class="form-control" placeholder="Ex: Cartão, Dinheiro" />
                        <span asp-validation-for="FormaPagamento" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="DataVenda" class="form-label">
                            <i class="bi bi-calendar-check-fill" style="color:#0e4ce0;"></i> Data da Venda
                        </label>
                        <input asp-for="DataVenda" type="date" class="form-control" />
                        <span asp-validation-for="DataVenda" class="text-danger"></span>
                    </div>
                </div>
            </section>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-5 fs-5">
                    <i class="bi bi-check-circle me-2"></i> Cadastrar
                </button>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-danger ms-3">
                    <i class="bi bi-x-circle-fill me-2"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
