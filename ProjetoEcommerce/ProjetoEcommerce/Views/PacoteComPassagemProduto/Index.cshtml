@model IEnumerable<ProjetoEcommerce.Models.tbPacoteComPassagemProduto>

<nav class="nav">
    <div class="container">
        <div class="text-star">
            <h1 class="text-primary">Anu Viagens</h1>
            <p class="text-nav fs-6">Acompanhe todos os seus registros em um único lugar.</p>
        </div>
    </div>
</nav>

<section>
    <form method="get" asp-action="Index" asp-controller="PacoteComPassagemProduto" class="d-flex mb-3">
        <input type="text" name="nomePacote" class="form-control me-2"
               placeholder="🔍 Pesquisar pacote..." value="@ViewBag.Nome" />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th>Id</th>
                            <th>Nome Produto</th>
                            <th>Nome Pacote</th>
                            <th>Assento</th>
                            <th>Situação</th>
                            <th>Transporte</th>
                            <th>Companhia</th>
                            <th>Código</th>
                            <th>Valor</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdPacote</td>
                                <td>@item.NomeProduto</td>
                                <td>@item.NomePacote</td>
                                <td>@item.Assento</td>
                                <td>@item.Situacao</td>
                                <td>@item.TipoTransporte</td>
                                <td>@item.Companhia</td>
                                <td>@item.CodigoTransporte</td>
                                <td>@item.Valor.ToString("C")</td>
                                <td class="text-center">
                                    <a asp-controller="Pacote" asp-action="EditarPacote" asp-route-id="@item.IdPacote"
                                       class="btn btn-outline-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-controller="Pacote" asp-action="ExcluirPacote" asp-route-id="@item.IdPacote"
                                       class="btn btn-outline-danger rounded-3" title="Excluir">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
