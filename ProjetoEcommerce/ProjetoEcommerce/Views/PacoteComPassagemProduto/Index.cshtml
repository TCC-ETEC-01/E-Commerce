@model IEnumerable<ProjetoEcommerce.Models.tbPacoteComPassagemProduto>

<nav class="nav">
    <div class="container">
        <div class="text-star">
            <h1 class="text-primary">Anu Viagens</h1>
            <p class="text-nav fs-6">Acompanhe todos os seus registros em um único lugar.</p>
        </div>
    </div>
</nav>
<section>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IdPacote)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NomeProduto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NomePacote)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantidade)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Assento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Situacao)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.IdPacote)</td>
                                <td class="text-truncate" style="max-width: 300px;" title="@item.NomeProduto">
                                    @item.NomeProduto
                                </td>
                                <td class="text-truncate" style="max-width: 300px;" title="@item.NomePacote">
                                    @item.NomePacote
                                </td>
                                <td class="text-truncate" style="max-width: 300px;" title="@item.Quantidade">
                                    @item.Quantidade
                                </td>
                                <td class="text-truncate" style="max-width: 300px;" title="@item.Assento">
                                    @item.Assento
                                </td>
                                <td class="text-truncate" style="max-width: 300px;" title="@item.Situacao">
                                    @item.Situacao
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm " role="group">
                                        <a asp-controller="Produto" asp-action="EditarProduto" asp-route-id="@item.IdPacote"
                                           class="btn btn-outline-primary  rounded-3  me-3" title="Editar">
                                            <i class="bi bi-pencil-square "></i>
                                        </a>
                                        <span> </span>
                                        <a asp-controller="Dashboard" asp-action="Index" asp-route-id="@item.IdPacote"
                                           class="btn btn-outline-primary rounded-3" title="Voltar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
