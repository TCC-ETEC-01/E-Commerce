@model IEnumerable<ProjetoEcommerce.Models.tbPacoteComPassagemProduto>

<nav class="nav">
    <div class="container">
        <div class="text-star">
            <h1 class="text-primary">Anu Viagens</h1>
            <p class="text-nav fs-6">Acompanhe todos os seus registros em um único lugar.</p>
        </div>
    </div>
</nav>
                 </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td class="text-truncate" style="max-width: 300px;">
                                    @Html.DisplayFor(modelitem => item.IdPacote)
                                </td>
                                <td class="text-truncate" style="max-width: 300px;">
                                    @Html.DisplayFor(modelitem => item.NomeProduto)
                                </td>
                                <td class="text-truncate" style="max-width: 300px;">
                                    @Html.DisplayFor(modelitem => item.NomePacote)
                                </td>
                                <td class="text-truncate" style="max-width: 300px;">
                                    @Html.DisplayFor(modelitem => item.Quantidade)
                                </td>
                                <td class="text-truncate" style="max-width: 300px;">
                                    @Html.DisplayFor(modelitem => item.Assento)
                                </td>
                                <td class="text-truncate" style="max-width: 300px;">
                                    @Html.DisplayFor(modelitem => item.Situacao)
                                </td>
                                <td class="text-truncate" style="max-width: 300px;">
                                    @Html.DisplayFor(modelitem => item.Translado)
                                </td>
                                <td class="text-truncate" style="max-width: 300px;">
                                    @Html.DisplayFor(modelitem => item.CodigoTransporte)
                                </td>
                                <td class="text-truncate" style="max-width: 300px;">
                                   R$ @Html.DisplayFor(modelitem =>  item.Valor)
                                </td>
                                <td class="text-truncate" style="max-width: 300px;">
                                    @Html.DisplayFor(modelitem => item.Companhia)
                                </td>
                                <td class="text-truncate" style="max-width: 300px;">
                                    @Html.DisplayFor(modelitem => item.TipoTransporte)
                                </td>

                                <td class="text-center">
                                    <div class="btn-group btn-group-sm " role="group">
                                        <a asp-controller="Pacote" asp-action="EditarPacote" asp-route-id="@item.IdPacote"
                                           class="btn btn-outline-primary  rounded-3  me-3" title="Editar">
                                            <i class="bi bi-pencil-square "></i>
                                        </a>
                                        <span> </span>
                                        <a asp-controller="Dashboard" asp-action="Index" onclick="return confirm('Deseja realmente excluir esse Produto ?');" asp-route-id="@item.IdPacote"
                                           class="btn btn-outline-primary rounded-3" title="Voltar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                <td>@item.IdPacote</td>
                                <td>@item.NomeProduto</td>
                                <td>@item.NomePacote</td>
                                <td>@item.Assento</td>
                                <td>@item.Situacao</td>
                                <td>@item.TipoTransporte</td>
                                <td>@item.Companhia</td>
                                <td>@item.CodigoTransporte</td>
                                <td>@item.Valor.ToString("C")</td>
                                <td class="text-center">
                                    <a asp-controller="Pacote" asp-action="ExcluirPacote" asp-route-id="@item.IdPacote"
                                       class="btn btn-outline-danger rounded-3" title="Excluir">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
