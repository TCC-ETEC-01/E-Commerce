@model ProjetoEcommerce.Models.tbTransporte

@{
    ViewData["Title"] = "Cadastrar Transporte";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@TempData["MensagemErro"]</div>
}

@if (ViewData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@ViewData["MensagemErro"]</div>
}


<link rel="stylesheet" href="~/css/clientecadastro.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<main>
    <div class="card-form">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-truck-front"></i>
            <div>
                <h2 class="mb-0 fw-bold">Cadastrar Transporte</h2>
                <small>Preencha os dados do novo transporte</small>
            </div>
        </div>

        <form asp-action="CadastrarTransporte" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <section class="form-section">
                <h5><i class="bi bi-truck"></i> Detalhes do Transporte</h5>

                <div class="row g-4">
                    <div class="col-md-4">
                        <label asp-for="CodigoTransporte" class="form-label">
                            <i class="bi bi-key-fill me-1"></i> Código do Transporte
                        </label>
                        <input asp-for="CodigoTransporte" class="form-control" placeholder="Digite o código" />
                        <span asp-validation-for="CodigoTransporte" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Companhia" class="form-label">
                            <i class="bi bi-building me-1"></i> Companhia
                        </label>
                        <input asp-for="Companhia" class="form-control" placeholder="Nome da companhia" />
                        <span asp-validation-for="Companhia" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="TipoTransporte" class="form-label">
                            <i class="bi bi-truck-front-fill me-1"></i> Tipo de Transporte
                        </label>
                        <input asp-for="TipoTransporte" class="form-control" placeholder="Ex: Aéreo, Terrestre" />
                        <span asp-validation-for="TipoTransporte" class="text-danger"></span>
                    </div>
                </div>
            </section>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Cadastrar
                </button>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-danger ms-2">
                    <i class="bi bi-x-circle-fill me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
