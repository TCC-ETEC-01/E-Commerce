@model ProjetoEcommerce.Models.tbTransporte

<link href="~/css/clientecadastro.css" rel="stylesheet" />
<form asp-action="CadastrarTransporte">
    <h1>Cadastrar Transporte</h1>
	
    <img class="Img aviao" src="~/imagem/aviao.png" />
    <img class="img lua" src="~/imagem/lua.png" />
    <img class="img nuvem" src="~/imagem/nuvem.png" />
    <img class="img bird" src="~/imagem/bird.png" />
   
    <div class="container-cadastro  w-100 h-100">

            <header>
                <nav class="navbar Tran-navbar Cadastro-navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand nav-link" asp-area="" asp-controller="Dashboard" asp-action="CadastroHome">Cliente</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1 w-25">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Produto" asp-action="CadastrarProduto">Produto</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Pacote" asp-action="CadastrarPacote">Pacote</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Passagem" asp-action="CadastrarPassagem">Passagem</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Funcionario" asp-action="CadastrarFuncionario">Funcionario</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Viagem" asp-action="CadastrarViagem">Viagem</a>
                                </li>
                                <li class="nav-item item-cada">
                                <a class="nav-link text-primary" asp-area="" asp-controller="Transporte" asp-action="CadastrarTransporte">Transporte</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                </header>



            <div class="row cadastro-row">
                <div class="col form-group">
                    <label asp-for="CodigoTransporte" class="control-label"></label>
                    <input asp-for="CodigoTransporte" class="form-control cadastro-input" />
                    <span asp-validation-for="CodigoTransporte" class="text-danger"></span>
                </div>

                <div class="col form-group">
                    <label asp-for="Companhia" class="control-label"></label>
                    <input asp-for="Companhia" class="form-control cadastro-input" />
                    <span asp-validation-for="Companhia" class="text-danger"></span>
                </div>

                <div class="col form-group">
                    <label asp-for="TipoTransporte" class="control-label"></label>
                    <input asp-for="TipoTransporte" class="form-control cadastro-input" />
                    <span asp-validation-for="TipoTransporte" class="text-danger"></span>
                </div>
            </div>
            <div class=" btn form-group justify-content-center align-items-center  d-flex ">
                <button type="submit" class="btn btn-primary text-center ps-5 pe-5 fs-5 justify-content-center  p-2" />Cadastrar</button>
            </div>
        
     </div>
</form>