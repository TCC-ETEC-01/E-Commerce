@model IEnumerable<ProjetoEcommerce.Models.tbTransporte>

<link href="~/css/clienteindex.css" rel="stylesheet" />


<div class="tudo">
    <nav class="nav pt-3">
        <div class="container row">
            <div class="text-star col">
                <h1 class="text-primary">Anu Viagens</h1>
                <p class="text-nav text-light fs-6">Acompanhe todos os seus registros em um único lugar.</p>

                <form method="get" asp-controller="Transporte" asp-action="Index" class="d-flex justify-content-start p-2 pb-1">
                    <div class="search-box">
                        <input type="text" name="termo" class="search-txt text-white" placeholder="Pesquisar transporte..." />
                        <button type="submit" class="search-btn" title="Pesquisar">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                 class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                            </svg>
                        </button>
                    </div>
                </form>
            </div>
            <div class="btn-nav col d-flex justify-content-end align-items-start pt-3 gap-2">
                <a asp-controller="Transporte" asp-action="CadastrarTransporte"
                   class="btn rounded-3 btn-primary" title="Cadastrar">
                    <i class="bi bi-person-plus"></i> Cadastrar
                </a>
                <a asp-controller="Dashboard" asp-action="Index"
                   class="btn rounded-3 btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Voltar
                </a>
            </div>
        </div>
    </nav>

    <section class="tudo p-3">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th width="8%">ID</th>
                                <th>Código Transporte</th>
                                <th>Companhia</th>
                                <th>Tipo do Transporte</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.IdTransporte</td>
                                    <td><strong>@item.CodigoTransporte</strong></td>
                                    <td class="text-truncate" style="max-width: 250px;" title="@item.Companhia">@item.Companhia</td>
                                    <td class="text-truncate" style="max-width: 250px;" title="@item.TipoTransporte">@item.TipoTransporte</td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-controller="Transporte" asp-action="EditarTransporte" asp-route-id="@item.IdTransporte" class="btn btnEditar" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-controller="Transporte" asp-action="ExcluirTransporte" asp-route-id="@item.IdTransporte" onclick="return confirm('Tem certeza que deseja excluir este transporte?');" class="btn btnCor" title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
