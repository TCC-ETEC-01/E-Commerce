@model ProjetoEcommerce.Models.tbTransporte

@{
    ViewData["Title"] = "Editar Transporte";
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@TempData["MensagemErro"]</div>
}

@if (ViewData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@ViewData["MensagemErro"]</div>
}

<link rel="stylesheet" href="~/css/EditarCliente.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<main>
    <div class="card-form">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-pencil-square"></i>
            <div>
                <h2 class="mb-0 fw-bold">Editar Transporte</h2>
                <small>Atualize os dados do transporte</small>
            </div>
        </div>

        <form asp-action="EditarTransporte" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="IdTransporte" />

            <section class="form-section">
                <div class="row g-4">

                    <div class="col-md-4">
                        <label asp-for="CodigoTransporte" class="form-label">
                            <i class="bi bi-key-fill"></i> Código do Transporte
                        </label>
                        <input asp-for="CodigoTransporte" class="form-control" />
                        <span asp-validation-for="CodigoTransporte" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Companhia" class="form-label">
                            <i class="bi bi-building"></i> Companhia
                        </label>
                        <input asp-for="Companhia" class="form-control" />
                        <span asp-validation-for="Companhia" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="TipoTransporte" class="form-label">
                            <i class="bi bi-truck-front-fill"></i> Tipo de Transporte
                        </label>
                        <input asp-for="TipoTransporte" class="form-control" />
                        <span asp-validation-for="TipoTransporte" class="text-danger"></span>
                    </div>

                </div>
            </section>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-5 py-2 fs-5 rounded-pill shadow-sm">
                    <i class="bi bi-save2-fill me-1"></i> Alterar
                </button>
                <button type="reset" class="btn btn-danger ms-2 px-5 py-2 fs-5 rounded-pill shadow-sm">
                    <i class="bi bi-x-circle-fill me-1"></i> Cancelar
                </button>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
