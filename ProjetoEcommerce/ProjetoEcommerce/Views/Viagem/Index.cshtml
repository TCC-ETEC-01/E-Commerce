@model IEnumerable<ProjetoEcommerce.Models.tbViagem>

<nav class="nav">
    <div class="container">
        <div class="text-star">
            <h1 class="text-primary">Anu Viagens</h1>
            <p class="text-nav fs-6">Acompanhe todos os seus registros em um único lugar.</p>
            <a asp-controller="Dashboard" asp-action="Index" class="btn rounded-3 btn-primary">
                <i class="bi bi-arrow-left-circle"></i> Voltar
            </a>
        </div>
    </div>
</nav>
<section>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th width="8%">Identificador</th>
                            <th>DataRetorno</th>
                            <th> Descricao</th>
                            <th>Origem</th>
                            <th>Destino</th>
                            <th>TipoTransporte</th>
                            <th>DataPartida</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.IdViagem)</td>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.DataRetorno)</strong>
                                </td>
                                <td class="text-truncate" style="max-width: 300px;" title="@item.Descricao">
                                    @item.Descricao
                                </td>
                                <td class="text-truncate" style="max-width: 300px;" title="@item.Origem">
                                    @item.Origem
                                </td>
                                <td class="text-truncate" style="max-width: 300px;" title="@item.Destino">
                                    @item.Destino
                                </td>
                                <td class="text-truncate" style="max-width: 300px;" title="@item.DataPartida">
                                    @item.DataPartida
                                </td>

                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-controller="Viagem" asp-action="EditarViagem" asp-route-id="@item.IdViagem"
                                           class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-controller="Cliente" asp-action="ExcluirViagem" asp-route-id="@item.IdViagem"
                                           onclick="return confirm('Tem certeza que deseja excluir esta Viagem?');"
                                           class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
