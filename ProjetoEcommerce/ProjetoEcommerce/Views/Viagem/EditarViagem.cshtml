@model ProjetoEcommerce.Models.tbViagem

@{
    ViewData["Title"] = "Editar Viagem";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
}

@if (ViewData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@ViewData["MensagemErro"]</div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}


<link rel="stylesheet" href="~/css/EditarCliente.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<main>
    <div class="card-form">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-pencil-square"></i>
            <div>
                <h2 class="mb-0 fw-bold">Editar Viagem</h2>
                <small>Atualize os dados da viagem</small>
            </div>
        </div>

        <form asp-action="EditarViagem" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="IdViagem" />

            <section class="form-section">
                <div class="row g-4">

                    <div class="col-md-6">
                        <label asp-for="DataPartida" class="form-label">
                            <i class="bi bi-calendar-check"></i> Data de Partida
                        </label>
                        <input asp-for="DataPartida" type="date" class="form-control" />
                        <span asp-validation-for="DataPartida" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DataRetorno" class="form-label">
                            <i class="bi bi-calendar-x"></i> Data de Retorno
                        </label>
                        <input asp-for="DataRetorno" type="date" class="form-control" />
                        <span asp-validation-for="DataRetorno" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Origem" class="form-label">
                            <i class="bi bi-arrow-up-right-circle"></i> Origem
                        </label>
                        <input asp-for="Origem" class="form-control" />
                        <span asp-validation-for="Origem" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Destino" class="form-label">
                            <i class="bi bi-arrow-down-left-circle"></i> Destino
                        </label>
                        <input asp-for="Destino" class="form-control" />
                        <span asp-validation-for="Destino" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Descricao" class="form-label">
                            <i class="bi bi-card-text"></i> Descrição
                        </label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                </div>
            </section>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-5 py-2 fs-5 rounded-pill shadow-sm">
                    <i class="bi bi-save2-fill me-1"></i> Alterar
                </button>
                <a asp-controller="Viagem" asp-action="Index" class="btn btn-danger">
                    <i class="bi bi-x-circle-fill me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
