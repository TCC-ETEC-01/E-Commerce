@model ProjetoEcommerce.Models.tbViagem

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="~/css/clientecadastro.css" rel="stylesheet" />

<body>
    <main class="container py-4">
        <header class="bg-gradient text-white rounded-4 p-4 mb-4" style="background: linear-gradient(90deg, #4e54c8, #8f94fb);">
            <div class="d-flex align-items-center gap-3 mb-2">
                <i class="bi bi-calendar-event fs-2"></i>
                <div>
                    <h2 class="mb-0 fw-bold">Cadastrar Viagem</h2>
                    <small>Preencha os dados da nova viagem</small>
                </div>
            </div>
        </header>

        <form asp-action="CadastrarViagem" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <section class="bg-light rounded-3 p-4 shadow-sm mb-4 border">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-geo-alt fs-4 me-2 text-primary"></i>
                    <div>
                        <h5 class="fw-bold mb-0">Detalhes da Viagem</h5>
                        <small class="text-muted">Informe as informações da viagem</small>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="DataPartida" class="form-label">
                            <i class="bi bi-calendar-check me-1 text-primary"></i> Data de Partida *
                        </label>
                        <input asp-for="DataPartida" type="date" class="form-control" />
                        <span asp-validation-for="DataPartida" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DataRetorno" class="form-label">
                            <i class="bi bi-calendar-x me-1 text-primary"></i> Data de Retorno
                        </label>
                        <input asp-for="DataRetorno" type="date" class="form-control" />
                        <span asp-validation-for="DataRetorno" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Origem" class="form-label">
                            <i class="bi bi-arrow-up-right-circle me-1 text-primary"></i> Origem *
                        </label>
                        <input asp-for="Origem" class="form-control" placeholder="Local de origem" />
                        <span asp-validation-for="Origem" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Destino" class="form-label">
                            <i class="bi bi-arrow-down-left-circle me-1 text-primary"></i> Destino *
                        </label>
                        <input asp-for="Destino" class="form-control" placeholder="Local de destino" />
                        <span asp-validation-for="Destino" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Descricao" class="form-label">
                            <i class="bi bi-card-text me-1 text-primary"></i> Descrição
                        </label>
                        <input asp-for="Descricao" class="form-control" placeholder="Descrição da viagem" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>
            </section>

            <div class="text-center">
                <button type="submit" class="btn btn-primary px-5 py-2 fs-5 rounded-pill shadow-sm">
                    <i class="bi bi-check-circle me-1"></i> Cadastrar
                </button>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Dashboard" asp-action="Index"
                   class="btn btn-danger px-5 py-2 fs-5 rounded-pill shadow-sm">
                    <i class="bi bi-x-circle-fill me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
